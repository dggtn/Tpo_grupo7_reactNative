{
  "expo": {
    "name": "gymApp",
    "slug": "gymApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.ritmofit",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app necesita acceso a la cámara para escanear códigos QR y hacer check-in en tus clases.",
        "NSPhotoLibraryUsageDescription": "Permite agregar fotos a tu perfil desde la galería."
      }
    },
     "android": {
      "permissions": [
        "CAMERA",
        "POST_NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ],
      "useNextNotificationsApi": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#74C1E6"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.gymApp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "expo": {
      "plugins": [
        [
          "expo-location",
          {
            "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
          }
        ],
        "react-native-map-link"
      ]
    },
    "plugins": [
      "expo-secure-store",
       [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#74C1E6",
          "sounds": [
            "./assets/notification-sound.wav"
          ],
          "androidMode": "default",
          "androidCollapsedTitle": "RitmoFit"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Esta app necesita acceso a la cámara para escanear códigos QR y hacer check-in en tus clases."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permite agregar fotos a tu perfil desde la galería.",
          "cameraPermission": "Permite tomar fotos para tu perfil."
        }
      ]
    ]
  }
}
